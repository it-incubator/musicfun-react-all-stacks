{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["react", "react-native"],
    "skipLibCheck": true,
    "moduleSuffixes": [".ios", ".android", ""]
  },
  "include": ["**/*.ts", "**/*.tsx", "declarations.d.ts"],
  "exclude": ["node_modules"]
}
